{
    "workbench.colorTheme": "United GNOME",
    "workbench.startupEditor": "none",
    "telemetry.telemetryLevel": "off",
    "files.autoSave": "afterDelay",
    "editor.tabSize": 4,
    "explorer.confirmDragAndDrop": false,
    "editor.rulers": [
        100
    ],
    "rst.preview.pythonPath": "python3",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "editor.renderLineHighlightOnlyWhenFocus": true,
    "editor.wordWrap": "on",
    "cmake.configureOnOpen": false,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "workbench.preferredDarkColorTheme": "United Ubuntu",
    "workbench.preferredHighContrastLightColorTheme": "Solarized Light",
    "rust-analyzer.inlayHints.enable": false,
    "workbench.editorAssociations": {
        "*.html": "default"
    },
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.preferredLightColorTheme": "Solarized Light",
    "window.autoDetectHighContrast": false,
    "window.autoDetectColorScheme": true,
    "svelte.enable-ts-plugin": true,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "python.linting.banditEnabled": false,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=220",
        "--ignore=E402,F841,F401,E302,E305,E722",
    ],
    "python.analysis.typeCheckingMode": "strict",
    "workbench.editorLargeFileConfirmation": 1048576,
    "files.maxMemoryForLargeFilesMB": 8192,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
}